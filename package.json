{
    "name": "angular-brulex-lint",
    "version": "0.2.1",
    "description": "Schematic to configure angular env with linter by Brulex",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "build:watch": "npm run build -- --watch"
    },
    "keywords": [
        "schematics"
    ],
    "repository": "brulex/angular-brulex-lint",
    "bugs": {
        "url": "https://github.com/brulex/angular-brulex-lint/issues"
    },
    "author": "brulex",
    "license": "MIT",
    "schematics": "./src/collection.json",
    "ng-add": {
        "save": "devDependencies"
    },
    "dependencies": {
        "@angular-devkit/core": "^12.2.5",
        "@angular-devkit/schematics": "^12.2.5",
        "@angular-eslint/schematics": "^12.4.1",
        "prettier": "^2.4.1",
        "strip-json-comments": "3.1.1",
        "typescript": "~4.3.2"
    },
    "devDependencies": {
        "@types/node": "^12.11.1"
    },
    "peerDependencies": {
        "@angular/cli": ">= 12.0.0 < 13.0.0"
    }
}
